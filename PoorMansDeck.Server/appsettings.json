{
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:9928",
        "ClientCertificateMode": "AllowCertificate",
        "Certificate": {
          "Path": "sample.pfx",
          "Password": "sample"
        }
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Log\\PoorMansDeck.Server_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
