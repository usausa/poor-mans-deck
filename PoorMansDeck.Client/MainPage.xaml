<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:PoorMansDeck.Client"
             x:Class="PoorMansDeck.Client.MainPage"
             x:DataType="app:DeckModel"
             BackgroundColor="{StaticResource GrayDarken4}">

    <!-- ReSharper disable Xaml.RedundantResource -->
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="VerticalStackLayout"
                   Class="DeckButtonLayout">
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style TargetType="Button"
                   Class="DeckButton">
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
            </Style>

            <Style TargetType="ImageButton"
                   Class="DeckButton">
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>

            <Style TargetType="Label"
                   Class="DeckButtonLabel">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="VerticalTextAlignment" Value="Start" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <DataTemplate x:Key="TextTemplate"
                          x:DataType="app:ButtonModel">
                <VerticalStackLayout Grid.Row="{Binding Row}"
                                     Grid.Column="{Binding Column}"
                                     StyleClass="DeckButtonLayout">
                    <Button StyleClass="DeckButton"
                            TextColor="{Binding TextColor}"
                            Text="{Binding Text}">
                        <Button.Background>
                            <LinearGradientBrush>
                                <GradientStop Offset="0.1" Color="{Binding BackColor1}" />
                                <GradientStop Offset="1.0" Color="{Binding BackColor2}" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Label StyleClass="DeckButtonLabel"
                           Text="{Binding Label}" />
                </VerticalStackLayout>
            </DataTemplate>

            <DataTemplate x:Key="ImageTemplate"
                          x:DataType="app:ButtonModel">
                <VerticalStackLayout Grid.Row="{Binding Row}"
                                     Grid.Column="{Binding Column}"
                                     StyleClass="DeckButtonLayout">
                    <ImageButton StyleClass="DeckButton"
                                 Source="{Binding Image}">
                        <ImageButton.Background>
                            <LinearGradientBrush>
                                <GradientStop Offset="0.1" Color="{Binding BackColor1}" />
                                <GradientStop Offset="1.0" Color="{Binding BackColor2}" />
                            </LinearGradientBrush>
                        </ImageButton.Background>
                    </ImageButton>
                    <Label StyleClass="DeckButtonLabel"
                           Text="{Binding Label}" />
                </VerticalStackLayout>
            </DataTemplate>

            <app:ButtonDataTemplateSelector x:Key="ButtonDataTemplateSelector"
                                            ImageTemplate="{StaticResource ImageTemplate}"
                                            TextTemplate="{StaticResource TextTemplate}" />

        </ResourceDictionary>
    </ContentPage.Resources>
    <!-- ReSharper restore Xaml.RedundantResource -->

    <Grid x:Name="DeckGrid"
          BindableLayout.ItemTemplateSelector="{StaticResource ButtonDataTemplateSelector}"
          BindableLayout.ItemsSource="{Binding Buttons}" />

