<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoorMansDeck.Client.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">
            <Image HeightRequest="185"
                   Aspect="AspectFit" SemanticProperties.Description="dot net bot in a hovercraft number nine" Source="dotnet_bot.png" />

            <Label Style="{StaticResource Headline}"
                   Text="Hello, World!"
                   SemanticProperties.HeadingLevel="Level1" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
